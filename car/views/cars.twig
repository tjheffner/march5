<html>
<head>
    <title>Your Car Criteria</title>
     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
</head>
<body>
        <div class="container">
        <h1>Add a car for sale:</h1>

        {% if cars is not empty %}
            <p>Here are all your cars:</p>
            <ul>
            {% for car in cars %}
            {{ car.getModel }}
                <li> {{ car.getMiles }} miles </li>
                <li> $ {{ car.getPrice }} </li>
            {% endfor %}
            </ul>
        {% endif %}
    </div>

    <div class="container">
    <form action='/car_results' method='post'>
        <div class="form-group">
        <label for='model'>Car model?</label>
        <input id='model' name='model' type='text' required>

        <label for='price'>Sale price?</label>
        <input id='price' name='price' type='number' required>

        <label for='miles'>Current miles?</label>
        <input id='miles' name='miles' type='number' required>

        <button type='submit' class="btn-success">Post</button>
        </div>
    </form>
    <form action='/delete' method='post'>
        <button type='submit' class="btn-success">Delete</button>
    </form>
    </div>

    <div class="container">
        <h1>Search for a car</h1>
        <form action='/search' method='post'>
            <div class="form-group">
                <label for='max_price'>Enter maximum price:</label>
                <input id='max_price' name='max_price' class="form-control" type="number">
            <button type='submit' class='btn-success'>Search</button>
            </div>
        </form>
    </div>
</body>
</html>
